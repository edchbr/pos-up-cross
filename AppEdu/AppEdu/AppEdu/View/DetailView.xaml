<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="AppEdu.View.DetailView">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Poster}"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center" 
                                   HeightRequest="120" />
            <Label Text="Descrição da série: " FontSize="Large" TextColor="Blue" HorizontalOptions="Center"/>
            <Label Text="{Binding Overview}" FontSize="Medium" TextColor="Blue"/>
            <StackLayout>
                <Label Text="Data de lançamento: " FontSize="Large" TextColor="Red"/>
                <Label Text="{Binding ReleaseDate}" FontSize="Medium" TextColor="Red"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Quantidade de votos: " FontSize="Large" TextColor="Red"/>
                <Label Text="{Binding Votes}" FontSize="Medium" TextColor="Red"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>